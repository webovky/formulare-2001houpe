<!doctype html>
<html lang="cs">

<head>
  <meta charset="utf-8">

  <title>{%block title%}Sčítání{%endblock%}</title>

  <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
  <link rel="shortcut icon" href="{{ url_for('static', filename='favico.png') }}" />

  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

</head>

<body>
<div>
<p class="userinfo">
{% if 'user' in session %}
  Uživatel: {{session['user']}}
{% else %}
  Nikdo není přihlášen
{% endif %}
</p>

<p class="logout">
<a href="{{ url_for('logout') }}">Logout</a>
</p>

{% for category, message in get_flashed_messages(with_categories=true) %}
  <p class="userinfo {{ category }}">{{ message }}</p>
{% endfor %}

</div>
<a href="https://github.com/spseol/startflask/"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png"></a>

<a href="https://cs.wikipedia.org/wiki/S%C4%8D%C3%ADt%C3%A1n%C3%AD"><img src="{{ url_for('static', filename='plus.png') }}" /></a>

<nav>
<ul>
    <li><a href="{{ url_for('scitani') }}">Sčítání</a></li>
    <li><a href="{{ url_for('odecitani') }}">Odečítání</a></li>
    <li><a href="{{ url_for('nasobeni') }}">Násobení</a></li>
    <li><a href="{{ url_for('login') }}">Login</a></li>
    
    
  </ul></nav>

{% block obsah %}

<h1>Sčítání</h1>

<form method = "get">
<input type = 'text', name = 'a', value = '', placeholder = 'Číslo a'>
+
<input type = 'text', name = 'b', value = '', placeholder = 'Číslo b'>
<input type = 'submit', name = 'secti', value = 'Sečti!'>
</form>
<p>Výsledek : {{c}}</p>
<a href="http://127.0.0.1:54321/">Vymazat výsledek </a>
{% endblock obsah %}

<footer>
